<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="comf.example.tydia.cse_110_team_project_team_15_1.FlashbackActivity"
    tools:showIn="@layout/activity_flashback">

    <TextView
        android:id="@+id/textView"
        android:layout_width="187dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Flashback"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/normal_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="NormalMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list_listofsongs"
        android:layout_width="368dp"
        android:layout_height="167dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="280dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_SongNameFlashback"
        android:layout_width="252dp"
        android:layout_height="22dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="68dp"
        android:text="Song Name:"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_timeAndDateFlashback"
        android:layout_width="252dp"
        android:layout_height="22dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="96dp"
        android:text="Time and Date:"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="252dp"
        android:layout_height="22dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="124dp"
        android:text="Location: "
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_play"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="168dp"
        android:text="PLAY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_pause"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="168dp"
        android:text="PAUSE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="212dp"
        android:layout_marginTop="168dp"
        android:text="SKIP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_like"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="220dp"
        android:text="LIKE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_dislike"
        android:layout_width="77dp"
        android:layout_height="40dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="220dp"
        android:text="DISLIKE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
